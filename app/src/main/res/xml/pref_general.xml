<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:title="@string/pref_location_title"
        android:key="@string/pref_location_key"
        android:defaultValue="@string/pref_location_defValue"
        android:inputType="text"
        android:singleLine="true"/>

    <ListPreference
        android:title="@string/pref_temp_title"
        android:key="@string/pref_temp_key"
        android:defaultValue="@string/pref_temp_metric"
        android:entries="@array/pref_temp_entries"
        android:entryValues="@array/pref_temp_entryValues"/>

</PreferenceScreen>